<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCodigoBarras"
        android:layout_marginTop="3dp"
        android:hint="Codigo de Barras"
        android:textAlignment="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:layout_marginTop="3dp"
        android:hint="Nombre"
        android:textAlignment="center"
        android:layout_below="@id/etCodigoBarras"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEstudio"
        android:layout_marginTop="3dp"
        android:hint="Estudio"
        android:textAlignment="center"
        android:layout_below="@id/etName"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etGenero"
        android:layout_marginTop="3dp"
        android:hint="Genero"
        android:textAlignment="center"
        android:layout_below="@id/etEstudio"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPrecio"
        android:layout_marginTop="3dp"
        android:hint="Precio"
        android:textAlignment="center"
        android:layout_below="@id/etGenero"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etExistencias"
        android:layout_marginTop="3dp"
        android:hint="Existencias"
        android:textAlignment="center"
        android:layout_below="@id/etPrecio"
        />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_below="@id/etExistencias"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSave"
        android:text="Guardar"
        android:layout_marginRight="10dp"
        android:layout_below="@id/etExistencias"
        android:layout_toLeftOf="@id/btnSearch"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdate"
        android:text="Actualizar"
        android:layout_toRightOf="@id/btnSearch"
        android:layout_below="@id/etExistencias"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnSearch"
        android:layout_centerHorizontal="true"
        />

    <ListView
        android:id="@+id/lvVideojuegos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/etExistencias"
        android:layout_marginTop="139dp" />
</RelativeLayout>